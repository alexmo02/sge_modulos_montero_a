    <record model="ir.ui.view" id="manbike61.bicycle_kanban">
      <field name="name">manbike61.bicycle kanban</field>
      <field name="model">manbike61.bicycle</field>
      <field name="arch" type="xml">
          <kanban string="Kanban bicycle" default_group_by="manufacturer">
              <field name="id" /> <!-- Es importante a침adir el id para poder usarlo a continuaci칩n -->
              <field name="name" />
              <field name="photo" />
              <field name="manufacturer" />
              <field name="trader" />
