     <record model="ir.ui.view" id="manbike61.bicycle_search">
      <field name="name">manbike61.bicycle search</field>
      <field name="model">manbike61.bicycle</field>
      <field name="arch" type="xml">
        <search string="Search bicycle">
          <field name="name" />
          <field name="description" string="Name and description" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
          <field name="manufacturer" />
          <field name="trader" />
          <field name="speed" string="Speed" filter_domain="[('speed', '>=', self)]" />

          <filter name="chainring" string="Number of chainring" domain="[('chainring','=',1)]"/>
          <filter name="today" string="In shop today" domain="[('inShop', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('inShop', '&lt;=', datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]"/>
          <filter name="group_by_manufacturer" string="Manufacturer" context="{'group_by': 'manufacturer'}"/>
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="manbike61.bicycle_form">
      <field name="name">manbike61.bicycle form</field>
      <field name="model">manbike61.bicycle</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
          <div class="oe_button_box" attrs="{'invisible':[('discount','=',True)]}">
              <button type="object" clss="oe_stat_button" name="calc_discount" icon="fa-percent">
                Discount
              </button>
          </div>
            <group string="Informaci칩n Principal">
              <field name="name"/>
              <field name="description"/>
              <field name="manufacturer"/>
              <field name="price"/>
              <field name="wheel"/>
              <field name="discount" class="oe_read_only"/>
              <field name="delivery"/>
            </group>
            <group>
              <group string="Fechas">
                <field name="inShop"/>
                <field name="year"/>
              </group>
              <group string="M치s detalles">
                <field name="chainring"/>
                <field name="cassette"/>
                <field name="speed"/>
                <field name="single_chainring"/>
              </group>
            </group>
            <div style="text-align: center">
              <field name="photo" widget="image"/>
            </div>
            <notebook>
              <page string="Comerciales">
                <field name="trader">
                  <tree>
                    <field name="name"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>



    <record model="ir.ui.view" id="manbike61.manufacturer_list">
      <field name="name">manbike61.manufacturer list</field>
      <field name="model">manbike61.manufacturer</field>
