                  <t t-name="kanban-box">
                  <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.manufacturer.raw_value)}} o_kanban_record_has_image_fill oe_kanban_global_click" >
                      <div class="o_kanban_image">
                          <img 
                              t-att-alt="record.name.value"
                              t-att-src="kanban_image('manbike61.bicycle', 'photo', record.id.raw_value)"
                              class="o_image_64_contain"
                          />
                      </div>
                      <div class="oe_kanban_details">
                            <h4><strong>
                                <field name="name"/>
                            </strong>
                            <t t-if="record.manufacturer.value">[<field name="manufacturer"/>]</t>
                            </h4>
                          <div name="bycicle_price" class="mt-1">
                              Precio: <field name="price" widget="monetary"/>
                          </div>
                          <div>
                            <ul>
                              <li>
                                <field name="trader" />
                              </li>
                            </ul>
                          </div>
                      </div>
                  </div>
                  </t>
              </templates>
          </kanban>
      </field>
    </record>

