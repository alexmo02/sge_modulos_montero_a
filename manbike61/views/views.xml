    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="manbike61.bicycle_list">
      <field name="name">manbike61.bicycle list</field>
      <field name="model">manbike61.bicycle</field>
      <field name="arch" type="xml">
        <tree decoration-info="price>=3000" decoration-success="wheel=='tipo29'" default_order="price desc">
          <field name="name"/>
          <field name="description"/>
          <field name="price" widget="monetary" sum="Total"/>
          <field name="delivery"/>
          <field name="wheel"/>
          <field name="speed" optional="hidden"/>
          <field name="manufacturer" optional="hidden"/>
          <!-- sequence la fecha para mover registros-->
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="manbike61.bicycle_calendar">
      <field name="name">manbike61.bicycle calendar</field>
      <field name="model">manbike61.bicycle</field>
      <field name="arch" type="xml">
        <calendar string="" date_start="inShop" color="endShop">
          
        </calendar>
      </field>
    </record>

